{% extends 'layout.html.twig' %}

{% block titre %} Connexion {% endblock %}
{% set active = 'connexion' %}
{% block contenu %}
    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-xs-push-2">
                <h2 class="text-center">Connexion</h2>

                {% if error %}
                    <div class="alert alert-danger">
                        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                        {{ error | replace({"Bad credentials." : "Identifiant et/ou mot de passe incorrect."}) }}
                    </div>
                {% endif %}

                {% if global.request.get('inscription') == 'success' %}
                    <div class="alert alert-success">
                        <p class="text-center"><i class="fa fa-thumbs-up fa-2x" aria-hidden="true"></i></p>
                        <p class="text-center">FÃ©licitation, votre inscription est effective.
                            <br>Vous pouvez maintenant vous connecter.</p>
                    </div>
                {% endif %}

                <form action="{{ url('connexion_login_check') }}"
                      method="POST" class="form-horizontal">

                    {# Email et Mot de Passe #}
                    <div class="form-group">
                        <div class="col-xs-6">
                            <input name="_username" id="EMAILMEMBRE"
                                   value="{{ last_username }}"
                                   class="form-control" required type="email"
                                   placeholder="Saisissez votre Email">
                        </div>
                        <div class="col-xs-6">
                            <input name="_password" id="MDPMEMBRE"
                                   class="form-control" required type="password"
                                   placeholder="*******************">
                        </div>
                    </div>

                    {# Bouton Submit #}
                        <input type="submit" class="btn btn-block btn-primary ms-btnconnexion"
                           value="Connexion">

                </form>
            </div>
        </div>
    </div>
{% endblock %}