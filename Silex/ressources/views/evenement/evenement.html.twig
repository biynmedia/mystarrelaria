{% extends "layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.0-RC3/css/bootstrap-datepicker.min.css" integrity="sha256-DTtN7ObB5bTs79Uq3wMVl7SUKbQ/jFD8MI8T9rzL8Ko=" crossorigin="anonymous" />
{% endblock %}

{% block title %}
    Ajouter un Evenement
{% endblock %}

{% block contenu %}

    <div class="container">
    <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
            <form class="form-horizontal" method="POST"
                  enctype="multipart/form-data">
                <h3>Créer un Evenement</h3>

                {# Date disponibilité #}
                <div class="form-group">
                    <label class="col-md-3 control-label">Date disponibilités</label>
                    <div class="col-md-9">
                         {{ form_row(form.DATEDISPONIBILITE) }}
                    </div>
                </div>

                {# Disponibilité #}
                <div class="form-group">
                    <label class="col-md-3 control-label">Localisation</label>
                    <div class="col-md-9">
                        {{ form_row(form.IDDISPONIBILITE) }}
                    </div>
                </div>

                {# Localisation #}
                <div class="form-group">
                    <label class="col-md-3 control-label">Localisation</label>
                    <div class="col-md-9">
                        {{ form_row(form.IDLOCALISATION) }}
                    </div>
                </div>

                {# Genre Musical #}
                <div class="form-group">
                    <label class="col-md-3 control-label">Genre</label>
                    <div class="col-md-9">
                        {{ form_row(form.IDGENRE) }}
                    </div>
                </div>



                {# IMPORTANT POUR LA VALIDATION DU TOKEN CSRF #}
                {{ form_row(form._token) }}

                {# Submit #}
                <div class="form-group">
                    <div class="col-xs-9 col-xs-offset-3">
                        <button type="submit" class="btn btn-primary"
                                value="Publier">Chercher</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.0-RC3/js/bootstrap-datepicker.min.js" integrity="sha256-cxy6ZG28yUYUJuVa4jSB0REugsTXuiaAVAVamfh5wmk=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.0-RC3/locales/bootstrap-datepicker.fr.min.js" integrity="sha256-IRibTuqtDv2uUUN/0iTrhnrvvygNczxRRAbPgCbs+LE=" crossorigin="anonymous"></script>
    <script>
            $('.js-datepicker').datepicker({
                isRTL: false,
                autoclose: true,
                language: 'fr'
            });
    </script>

{% endblock %}