{% extends 'layout.html.twig' %}

{% block title %} Inscription {% endblock %}
{% set active = 'inscription' %}
{% block contenu %}

    <div class="row">
        <div class="col-xs-6 col-xs-push-3">
            <h2 class="text-center">Inscription d'un Membre</h2>

            {% if error is defined %}
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    {{ error }}
                </div>
            {% endif %}

            <form action="{{ url('news_inscription_post') }}" method="POST"
                  class="form-horizontal">

                {# Prénom et Nom #}
                <div class="form-group">
                    <div class="col-xs-6">
                        <input name="NOMMEMBRE" id="NOMMEMBRE" class="form-control" required type="text"
                               placeholder="Saisissez votre Nom">
                    </div>
                    <div class="col-xs-6">
                        <input name="PRENOMMEMBRE" id="PRENOMMEMBRE" class="form-control" required type="text"
                               placeholder="Saisissez votre Prénom">
                    </div>
                </div>

                {# Email et Mot de Passe #}
                <div class="form-group">
                    <div class="col-xs-6">
                        <input name="EMAILMEMBRE" id="EMAILMEMBRE"
                               class="form-control" required type="email"
                               placeholder="Saisissez votre Email">
                    </div>
                    <div class="col-xs-6">
                        <input name="MDPMEMBRE" id="MDPMEMBRE"
                               class="form-control" required type="password"
                               placeholder="*******">
                    </div>
                </div>

                {# Bouton Submit #}
                <input type="submit" class="btn btn-block btn-primary"
                       value="M'inscrire !">

            </form>
        </div>
    </div>

{% endblock %}
